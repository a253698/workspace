package exam.fju.exam;

import java.util.Scanner;

public class VendingMachine {

	public static void main(String[] args) {

		int money = 0;
		int n = -1;
		Drink d1 = new Drink("a", 10);
		Drink d2 = new Drink("b", 15);
		Drink d3 = new Drink("c", 10);
		Drink d4 = new Drink("d", 18);
		Drink d5 = new Drink("e", 10);
		Drink d6 = new Drink("f", 20);
		Drink d7 = new Drink("g", 15);
		Drink d8 = new Drink("h", 18);

		while (n > 0) {

			Scanner scanner = new Scanner(System.in);
			String line = scanner.nextLine();
			
			System.out.println("販賣機餘額:" + money);
			System.out.println("請投幣或選擇飲料，或輸入0結束:");
	

			switch (line) {
			case "1":
				money = money + 1;
				break;

			case "5":
				money = money + 5;
				break;

			case "10":
				money = money + 10;
				break;

			case "a":
				if ((money) - 10 > 0) {
					System.out.println("DON!");
					money = money - 10;
				} else {
					System.out.println("BEEP!");
				}

				break;

			case "b":

				if ((money) - 15 > 0) {
					System.out.println("DON!");
					money = money - 15;
				} else {
					System.out.println("BEEP!");
				}

				break;

			case "c":

				if ((money) - 10 > 0) {
					System.out.println("DON!");
					money = money - 10;
				} else {
					System.out.println("BEEP!");
				}

				break;
			case "d":

				if ((money) - 18 > 0) {
					System.out.println("DON!");
					money = money - 18;
				} else {
					System.out.println("BEEP!");
				}

				break;
			case "e":

				if ((money) - 10 > 0) {
					System.out.println("DON!");
					money = money - 10;
				} else {
					System.out.println("BEEP!");
				}

				break;
			case "f":

				if ((money) - 20 > 0) {
					System.out.println("DON!");
					money = money - 20;
				} else {
					System.out.println("BEEP!");
				}

				break;
			case "g":

				if ((money) - 15 > 0) {
					System.out.println("DON!");
					money = money - 15;
				} else {
					System.out.println("BEEP!");
				}

				break;
			case "h":

				if ((money) - 18 > 0) {
					System.out.println("DON!");
					money = money - 18;
				} else {
					System.out.println("BEEP!");
				}

				break;
				
			default:
				continue;
				
				
			case "0":
				System.exit(0);
			}
		}

	}

}
